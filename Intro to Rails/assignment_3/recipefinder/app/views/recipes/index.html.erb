<h1>Searching for <%= @search_term %></h1>

<table border="1">
    <tr>
        <th>Thubnail</th>
        <th>Title</th>
        <th>Social Rank</th>
    </tr>
    <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
        <td><%= link_to(image_tag(recipe['image_url'])) %></td>
        <td><%= link_to(recipe['title']) %></td>
        <td><%= recipe['social_rank'] %></td>
    </tr>
    <% end %>
</table>

<p>Powered By Food2Fork.com</p>